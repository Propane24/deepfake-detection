{
  "manifest_version": 3,
  "name": "Real-Time Authenticity Detector",
  "version": "1.0",
  "description": "Browser-level authenticity detection overlay for images and videos.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}